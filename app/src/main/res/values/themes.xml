<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeriesTracker" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/complimentary</item>
        <item name="colorSecondaryVariant">@color/complimentary_background</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.SeriesTracker.ButtonOverflow</item>
        <item name="popupTheme">@style/Theme.SeriesTracker.OverflowTheme</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="Theme.SeriesTracker.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>